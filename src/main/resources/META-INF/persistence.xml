<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="unit-jpa">
        <properties>
            <!-- Configurazione del database e del server-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/trasporti"/>
            <!-- user del db-->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <!-- password del db-->
            <property name="jakarta.persistence.jdbc.password" value="fricchio29"/>

            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.default_schema" value="public"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
